@model WebApplication1.Models.Books
@{
    ViewBag.AuthorList = new SelectList(ViewBag.author, "id", "Name");


}

<h1>Create Book</h1>



<div class="row">
    <div class="col-md-4">

        <form asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Edition" class="control-label"></label>
                <input asp-for="Edition" class="form-control" />
                <span asp-validation-for="@Model.Edition"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Book Copies</label>
                <input asp-for="BookCount" class="form-control" />
                <span asp-validation-for="@Model.BookCount"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Authors : </label>
                @{ if (ViewBag.AuthorName == null)
                    {
                        <select asp-for="@Model.author.id" asp-items="ViewBag.AuthorList"></select>
                    }
                    else
                    {
                        Authors a = ViewBag.AuthorName as Authors;
                        <select asp-for="@Model.author.id" asp-items="ViewBag.AuthorList"></select>
                        <label class="control-label">  Choose : @a.Name </label>

                    }
                }

            </div>
            <div class="form-group">
                <input type="submit" value="Create Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>