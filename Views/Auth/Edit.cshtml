@model WebApplication1.Models.Authors


<h1>Updating Author</h1>

@using (Html.BeginForm("Edit", "Auth", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Name)
        @Html.EditorFor(p => p.Name)
        @Html.ValidationMessageFor(p => p.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Describtion)
        @Html.EditorFor(p => p.Describtion)
        @Html.ValidationMessageFor(p => p.Describtion)
    </div>
   
    <input type="hidden" asp-for="@Model.id" />
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
}
